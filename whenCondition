pipeline {
  agent any

  options {
  skipDefaultCheckout true
  }

  parameters {
    string(name:"Name", description:"Name of the person")
    choice(name:"Gender", choices:["Male","Female"], description:"Gender of the person")
  }

  stages {
    stage("Test") {
      when {
        environment(name:"${params.Gender}", value:"Male")
      }

      steps {
        echo "${params.Name}"
        echo "${params.Gender}"
      }
    }
  }
}
